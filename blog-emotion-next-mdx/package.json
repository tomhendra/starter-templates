{
  "name": "personal-site",
  "version": "3.0.0-alpha.0",
  "license": "ISC",
  "description": "Blog and Portfolio for Tom Hendra",
  "repository": "https://github.com/tomhendra/personal-site.git",
  "author": "Tom Hendra",
  "main": "next.config.js",
  "scripts": {
    "test": "is-ci-cli \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:report": "coverage/lcov-report/index.html --open",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "dev": "next",
    "dev:watch": "next-remote-watch ./content",
    "build": "next build",
    "start": "next start",
    "lint": "jest --config test/jest.lint.ts",
    "type:check": "jest --config test/jest.tsc.ts",
    "format": "npm prettier --write",
    "validate": "npm test && npm build",
    "rm:cache": "rm -rf .next/cache",
    "export": "next export"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "jest-runner-tsc": {
    "tsconfigPath": "./tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm build"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts|tsx|css|md|mdx)": [
      "prettier",
      "jest --findRelatedTests"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "fast-glob": "^3.2.5",
    "gray-matter": "^4.0.2",
    "next": "^10.0.9",
    "next-cookies": "^2.0.3",
    "next-mdx-remote": "^2.1.3",
    "next-remote-watch": "^0.3.0",
    "next-seo": "^4.20.0",
    "prism-react-renderer": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/jest": "^11.2.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "is-ci-cli": "^2.2.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-runner-tsc": "^1.6.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
